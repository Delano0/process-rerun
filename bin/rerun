#!/usr/bin/env node

process.title = 'protractor-rerun'


const {walkSync, buildExeRun} = require('../lib')

const path = require('path')
const fs = require('fs')
const {exec} = require('child_process')
const sleep = (time) => new Promise((res) => setTimeout(res, time))
const argv = require('minimist')(process.argv.slice(2));

let stdOutAnalize = (stack) => true
let maxSessionCount = argv.maxSessionCount || 5
let specRerunCount = argv.specRerunCount || 2
let configFilePath = argv.configPath || path.resolve(process.cwd(), './protractor.conf.js')

buildExeRun({maxSessionCount, specRerunCount})()